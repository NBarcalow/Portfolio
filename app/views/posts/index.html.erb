<!doctype html>
<html lang="en">
  <body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
          <p><%= button_to "Home", root_path, :id => "open-contacts-dialog-btn", :class => "inbox-sf-add-btn tip", :method => :get %></p>
          </li>
          <li class="nav-item">
          <p><%= button_to "Sign Out", destroy_user_session_path, method: :delete %></p>
          </li>
          <li class="nav-item">
          <p><%= button_to "Index", root_path, :id => "open-contacts-dialog-btn", :class => "inbox-sf-add-btn tip", :method => :get %></p>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <main role="main">

      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Portfolio</h1>
          <p>Some stuff about the Portfolio owner goes here!.</p>
          <h2><strong><%= current_user.email %></strong></h2>
          <img class="rounded-circle float-right img-thumbnail" style="width:25%" src="https://pathfindercareers.com/wp-content/uploads/2019/06/poop.jpeg" data-holder-rendered="true"
          <p><%= button_to "Learn More", root_path, :id => "open-contacts-dialog-btn", :class => "inbox-sf-add-btn tip", :method => :get %></p>
        </div>
      </div>

      <div class="container">
        <!-- Example row of columns -->
        <div class="row">
          <div class="col-md-5">
            <h2>Projects</h2>
            <p>
              <table>
              <thead>
                <tr>
                  <th>Project Titles:</th>
                  <tbody>
                  <% @posts.each do |post| %>
                    <tr>
                      <td><%= post.title %></td>
                      <td><%= post.description %></td>
                      <td><%= link_to 'Show|', post %></td>
                      <% if user_signed_in? %>
                        <td><%= link_to 'Edit|', edit_post_path(post) %></td>
                        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </p>
          </div>
          <div class="col-md-4">
            <h2>Create New Project</h2>
            <p><%= button_to "New Project", new_post_path, :id => "open-contacts-dialog-btn", :class => "inbox-sf-add-btn tip", :method => :get %></p>
          </div>

        </div>

        <hr>

      </div> <!-- /container -->

    </main>



